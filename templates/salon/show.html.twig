{% extends 'base.html.twig' %}

{% block title %}{{ salon.name }}{% endblock %}

{% block body %}
    <h1>{{ salon.name }} Details</h1>
    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ salon.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ salon.name }}</td>
        </tr>
        <tr>
            <th>Street</th>
            <td>{{ salon.street }}</td>
        </tr>
        <tr>
            <th>Zip</th>
            <td>{{ salon.zip }}</td>
        </tr>
        <tr>
            <th>City</th>
            <td>{{ salon.city }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ salon.email }}</td>
        </tr>
        <tr>
            <th>Phone</th>
            <td>{{ salon.phone }}</td>
        </tr>
        </tbody>
    </table>

    <div class="float-right">
        <a class="btn btn-secondary" href="{{ path('salon_index') }}">Back</a>
        <a class="btn btn-success" href="{{ path('salon_edit', {'id': salon.id}) }}">Edit</a>
    <div class="float-right">

{% endblock %}
